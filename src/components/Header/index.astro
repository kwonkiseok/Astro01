---
import GNB from './gnb.astro';
---
<div class="sentinal"></div>
<header class="header rounded-lg shadow top-0 z-10">
    <nav class="border-gray-200 px-4 lg:px-6 py-2.5 dark:bg-gray-800 h-full">
        <div class="flex justify-between items-center mx-auto flex-col h-full">
            <a href="/" class="flex items-center flex-col logo-link">
                <div class="logo">
                    <div class="elogo">
                        <div class="trif u1"></div>
                        <div class="trif u2"></div>
                        <div class="trif u3"></div>
                        <div class="trif u4"></div>
                        <div class="ct"></div>
                        <div class="trif l1"></div>
                        <div class="trif l2"></div>
                        <div class="trif l3"></div>
                        <div class="trif l4"></div>
                    </div>
                </div>
            </a>
            <div class="justify-center items-center flex w-auto order-1">
                <GNB />
            </div>
        </div>
    </nav>
</header>
<style>
    header {
        background-color: rgba(255,255,255,.3);
        position: sticky;
        top: 0;
        transition: all .3s ease;
        height: 140px;
    }
    .logo {
        transform: scale(.6);
        transition: all .3s ease;
    }
    .logo .elogo {
        height: 80px;
        top: -20px;
        transition: all .3s ease;
    }
    .logo-link {
        transition: all .3s ease;
    }
    .sentinal {
        position: absolute;
        top: 1rem;
        left: 0;
        right: 0;
        z-index: -10;
    }

    header.sticky-init {
        border-radius: 0 0 0.5rem 0.5rem;
        background: #fff;
    }
    header.sticky-init .logo {
        /*transform: scale(.35);
        transform-origin: center 15px;*/
    }
</style>
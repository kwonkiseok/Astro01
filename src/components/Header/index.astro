---
import GNB from './gnb.astro';
---
<div class="sentinal"></div>
<header class="header rounded-lg shadow top-0 z-10">
    <nav class="border-gray-200 px-4 lg:px-6 py-2.5 dark:bg-gray-800">
        <div class="flex justify-center items-center mx-auto flex-col">
            <a href="/" class="flex items-center flex-col relative">
                <div class="logo">
                    <div class="elogo">
                        <div class="trif u1"></div>
                        <div class="trif u2"></div>
                        <div class="trif u3"></div>
                        <div class="trif u4"></div>
                        <div class="ct"></div>
                        <div class="trif l1"></div>
                        <div class="trif l2"></div>
                        <div class="trif l3"></div>
                        <div class="trif l4"></div>
                    </div>
                </div>
            </a>
            <div class="justify-center items-center flex w-auto order-1">
                <GNB />
            </div>
        </div>
    </nav>
</header>
<style>
    header {
        background-color: rgba(255,255,255,.3);
        transition: all .5s ease;
        position: sticky;
        top: 0;
    }
    header.sticky {
        border-radius: 0 0 0.5rem 0.5rem;
        background: #fff;
    }
    header > nav {
        transition: all .5s ease;
    }
    .logo {
        transform: scale(.6);
        transition: all .5s ease;
    }
    .sticky .logo {
        transform: scale(.35);
        transform-origin: center 15px;
    }
    .logo .elogo {
        /* height: 80px;
        top: -20px;
        transition: all .5s ease; */
    }
    .sticky .elogo {
        height: 50px;
    }
    .sentinal {
        position: absolute;
        top: 1rem;
        left: 0;
        right: 0;
        z-index: -10;
    }
</style>
---
const response = await fetch('https://www.freetogame.com/api/games');
const responseData = await response.json();
---
<div class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-4">
    {
        responseData.map((data) => (
            <div class="relative">
                
                <div class="">
                    <img src={data.thumbnail} alt="" class="object-cover w-full h-full rounded-lg">   
                </div>
                <a href=`/game/${ data.id }`>
                    <h3 class="pb-1 pt-2 text-lg font-normal">{ data.title }</h3>
                    <div class="absolute inset-0"></div>
                </a>
                <p class="line-clamp-3 text-sm text-gray-600">{ data.short_description }</p>
            </div>
        ))
    }
</div>